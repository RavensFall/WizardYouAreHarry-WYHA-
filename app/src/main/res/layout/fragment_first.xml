<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".View.fragments.first.FirstFragment">


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/spellFinder"
        app:layout_constraintEnd_toEndOf="@+id/findEditText"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/findEditText" />

    <EditText
        android:id="@+id/findEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/enter_the_name_of_the_spell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:textSize="34sp"
        android:textColorHint="@color/white"
        />

    <Button
        android:id="@+id/spellFinder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/find_spell"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/findEditText"
        app:layout_constraintStart_toStartOf="@+id/findEditText"
        app:layout_constraintTop_toBottomOf="@id/findEditText" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="265dp"
        android:layout_height="202dp"
        android:src="@drawable/wyha"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="181dp"
        app:layout_constraintTop_toBottomOf="@id/findEditText"
        app:layout_constraintBottom_toTopOf="@id/spellFinder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>